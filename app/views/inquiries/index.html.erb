<% provide(:title, 'お問合せ一覧') %>
<h1>お問合せ一覧</h1>

<div class="row">
  <div class="span5">
    <ul class="inquiries">
      <% @inquiries.each do |inquiry| %>
        <li>
          <p>
            <%= inquiry.name %>(<%= mail_to inquiry.email %>)
            <br>
            <%= inquiry.created_at.to_s %>
          </p>
          <p>
            <strong><%= @categories[inquiry.category_id].name %></strong>
            <br>
            <%= inquiry.content %>
            <br>
            <%= link_to "削除", inquiry, method: :delete,
                                    data: { confirm: "削除しますか？" } %>
          </p>
        </li>
      <% end %>
    </ul>
    
    <%= will_paginate %>
  </div>
  <div class="span7"></div>
</div>

